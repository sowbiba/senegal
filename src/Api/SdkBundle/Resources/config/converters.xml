<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="api.converter.model.class">Api\SdkBundle\Request\ParamConverter\ModelParamConverter</parameter>
    </parameters>

    <services>
        <service id="api.converter.model" class="%api.converter.model.class%">
            <argument type="service" id="api.mediator.sdk" />
            <tag name="request.param_converter" converter="model" priority="1" />
        </service>
    </services>
</container>
