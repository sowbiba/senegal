<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sdk_user_provider.class">Api\SdkBundle\Security\User\SdkUserProvider</parameter>
        <parameter key="api_password_encoder.class">Api\SdkBundle\Security\Encoder\LegacyPasswordEncoder</parameter>
        <parameter key="api.security.login_handler.class">Api\SdkBundle\Security\Handler\LoginSuccessHandler</parameter>
        <parameter key="api.security.logout_handler.class">Api\SdkBundle\Security\Handler\LogoutSuccessHandler</parameter>
    </parameters>

    <services>
        <service id="sdk_user_provider" class="%sdk_user_provider.class%">
            <argument type="service" id="api.sdk.user" />
        </service>

        <service id="api.security.login_handler" class="%api.security.login_handler.class%">
        </service>

        <service id="api.security.logout_handler" class="%api.security.logout_handler.class%">
        </service>

        <service id="api_password_encoder" class="%api_password_encoder.class%" />
    </services>
</container>
