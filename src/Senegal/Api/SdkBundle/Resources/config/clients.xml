<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pfd.client.class">Guzzle\Http\Client</parameter>
    </parameters>

    <services>
        <service id="pfd.client.espri" class="%pfd.client.class%">
            <argument>%espri_ws_url%</argument>
            <argument type="collection">
                <argument key="request.options" type="collection">
                    <argument key="auth" type="collection">
                        <argument>%espri_ws_user%</argument>
                        <argument>%espri_ws_password%</argument>
                    </argument>
                </argument>
            </argument>
        </service>
    </services>
</container>
