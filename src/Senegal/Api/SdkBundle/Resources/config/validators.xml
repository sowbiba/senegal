<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pfd.revision.validator.class">Pfd\Sdk\Revision\Validator\Constraints\RevisionValidator</parameter>
    </parameters>

    <services>
        <service id="validator.unique.revision" class="%pfd.revision.validator.class%">
            <argument type="service" id="pfd.connector.productLine.propel" />
            <tag name="validator.constraint_validator" alias="revision_validator" />
        </service>
    </services>
</container>
