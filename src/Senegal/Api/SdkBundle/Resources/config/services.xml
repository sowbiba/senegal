<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="bridge.xml"/>
        <import resource="clients.xml"/>
        <import resource="mediators.xml"/>
        <import resource="connectors.xml"/>
        <import resource="converters.xml"/>
        <import resource="event_listeners.xml"/>
        <import resource="sdks.xml"/>
        <import resource="forms.xml"/>
        <import resource="validators.xml"/>
        <import resource="security.xml"/>
    </imports>

    <services>
        <service id="pfd_sdk.tools.uploaded_file_slugifier" class="Senegal\Api\SdkBundle\Tools\UploadedFileSlugifier">
            <argument>%upload_dir%</argument>
            <argument>%web_dir%</argument>
        </service>
    </services>
</container>
