<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sdk_user_provider.class">Senegal\Api\SdkBundle\Security\User\SdkUserProvider</parameter>
        <parameter key="legacy_password_encoder.class">Senegal\Api\SdkBundle\Security\Encoder\LegacyPasswordEncoder</parameter>
        <parameter key="pfd.security.login_handler.class">Senegal\Api\SdkBundle\Security\Handler\LoginSuccessHandler</parameter>
        <parameter key="pfd.security.logout_handler.class">Senegal\Api\SdkBundle\Security\Handler\LogoutSuccessHandler</parameter>
    </parameters>

    <services>
        <service id="sdk_user_provider" class="%sdk_user_provider.class%">
            <argument type="service" id="pfd.sdk.user" />
            <argument type="service" id="pfd.bridge" />
        </service>

        <service id="pfd.security.login_handler" class="%pfd.security.login_handler.class%">
            <argument type="service" id="pfd.bridge" />
        </service>

        <service id="pfd.security.logout_handler" class="%pfd.security.logout_handler.class%">
            <argument type="service" id="pfd.bridge" />
        </service>

        <service id="legacy_password_encoder" class="%legacy_password_encoder.class%" />
    </services>
</container>
