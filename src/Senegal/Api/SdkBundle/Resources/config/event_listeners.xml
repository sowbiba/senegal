<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pfd_sdk.listener.uploadable" class="Senegal\Api\SdkBundle\Listener\UploadableListener">
            <tag name="pfd_sdk.event_listener" event="preCreate" />
            <tag name="pfd_sdk.event_listener" event="preDelete" />
            <tag name="pfd_sdk.event_listener" event="preUpdate" />
            <argument type="service" id="pfd_sdk.tools.uploaded_file_slugifier"></argument>
        </service>
        <service id="pfd_sdk.listener.timestampable" class="Senegal\Api\SdkBundle\Listener\TimestampableListener">
            <tag name="pfd_sdk.event_listener" event="preCreate" />
            <tag name="pfd_sdk.event_listener" event="preUpdate" />
        </service>
        <service id="pfd_sdk.listener.blameable" class="Senegal\Api\SdkBundle\Listener\BlameableListener">
            <tag name="pfd_sdk.event_listener" event="preCreate" />
            <tag name="pfd_sdk.event_listener" event="preUpdate" />
            <argument type="service" id="service_container"></argument>
        </service>
    </services>
</container>
