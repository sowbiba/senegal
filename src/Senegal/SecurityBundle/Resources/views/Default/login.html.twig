{% set menu_active = 'users' %}
{% extends "SenegalBackBundle::layout.html.twig" %}

{% trans_default_domain translation_domain %}

{% block container_class %}{{ parent() }} login{% endblock container_class %}

{% block page_header %}{% endblock page_header %}

{% block menu '' %}

{% block content_body %}
    {{ parent() }}

    <div class="form-login col-xs-4 col-xs-offset-4">
        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error.message|trans }}</div>
        {% endif %}

        <form action="{{ path(login_check) }}" method="post" role="form" class="well">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <div class="form-group">
                <label for="username">{% trans %}form.login.login{% endtrans %}:</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>
            <div class="form-group">
                <label for="password">{% trans %}form.login.password{% endtrans %} :</label>
                <input type="password" class="form-control" id="password" name="_password"/>
            </div>
            <button type="submit" class="btn btn-default">{% trans %}form.login.connexion{% endtrans %}</button>
        </form>
    </div>
{% endblock content_body %}

{% block sidebarWrapper '' %}
